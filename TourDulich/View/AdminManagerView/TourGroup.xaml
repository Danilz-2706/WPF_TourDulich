<UserControl x:Class="TourDulich.View.AdminManager.TourGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourDulich.View.AdminManager" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             DataContext="{StaticResource tgvm}"
             d:DesignHeight="625" d:DesignWidth="947">
    <!--//Resource//-->
    <UserControl.Resources>
        <!--//Size - TextBlock//-->
        <Style x:Key="fontText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <!--//Size - Combobox//-->
        <Style x:Key="sizeCombobox" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
        </Style>

        <!--//Info - name - value //-->
        <!--//Start//-->
        <Style x:Key="tblIfo" TargetType="TextBlock">
            <Setter Property="Height" Value="auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="190"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="tblIfo1" TargetType="TextBox">
            <Setter Property="MinHeight" Value="25"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="190"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="CbblIfo1" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="190"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="tbName" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="111"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!--//End//-->

    </UserControl.Resources>

    <!--//Main//-->
    <Grid Background="Transparent">
        <materialDesign:Card>
            <Grid>
                <!--//Layout//-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="14.625*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.827*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--//Search//-->
                <Grid Grid.Row="0" Grid.Column="0" Background="#9D9D9D">
                    <TextBlock  Text="Tìm kiếm" 
                                    Margin="55 0 0 0" 
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource fontText}"></TextBlock>
                    <ComboBox
                                    materialDesign:HintAssist.Hint="Search"
                                    IsEditable="True"
                                    VerticalContentAlignment="Center"
                                    Background="#fff"
                                    VerticalAlignment="Center" Margin="125,0,92,0"
                                    materialDesign:HintAssist.HintOpacity=".26"  
                                    Style="{StaticResource sizeCombobox}">
                    </ComboBox>
                    <Grid Background="#918D8D"  Width="30" Height="30"
                              Margin="0 0 62 0"
                              HorizontalAlignment="Right">
                        <Image  Source="/Assets/Icon/DT1__UI--icon/search.png"
                                    Width="30" Height="30"/>
                    </Grid>
                </Grid>

                <!--//Filter//-->
                <Grid Grid.Row="0" Grid.Column="1" Background="#9D9D9D">
                    <TextBlock  Text="Lọc" 
                                    Margin="20 0 0 0" 
                                    Width="40"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource fontText}"/>
                    <ComboBox
                                    Width="260" Background="#fff"
                                    Margin="0 0 16 0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource sizeCombobox}">
                        <ComboBoxItem>
                            Đang di chuyển
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Chưa khởi hành
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Đã kết thúc
                        </ComboBoxItem>
                        <ComboBoxItem>
                            (Default)
                        </ComboBoxItem>
                    </ComboBox>
                </Grid>

                <!--//List Tour//-->
                <Grid Grid.Row="1" Grid.Column="0" >

                    <ListView ItemsSource="{Binding ListGroup}" SelectedItem="{Binding SelectedItem}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Mã Đoàn" DisplayMemberBinding="{Binding MaDoan}"></GridViewColumn>
                                    <GridViewColumn Header="Mã Tour" DisplayMemberBinding="{Binding MaTour}"></GridViewColumn>
                                    <GridViewColumn Header="Tên Đoàn" DisplayMemberBinding="{Binding TenTour}"></GridViewColumn>
                                    <GridViewColumn Header="Nhân viên dẫn đoàn" DisplayMemberBinding="{Binding MaDoan}"></GridViewColumn>
                                    <GridViewColumn Header="Ngày đi" DisplayMemberBinding="{Binding NgayDi, StringFormat='dd/MM/yyyy'}"></GridViewColumn>
                                    <GridViewColumn Header="Ngày về" DisplayMemberBinding="{Binding NgayVe, StringFormat='dd/MM/yyyy'}"></GridViewColumn>
                                    <GridViewColumn Header="Doanh thu" DisplayMemberBinding="{Binding DoanhThu}"></GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>


                <!--//Info - Add - Edit - Remove //-->
                <Grid   Grid.Row="1"
                            Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10.25*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--//Info//-->
                    <Grid Grid.Row="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" >
                            <StackPanel Background="#C2C2C2" Height="auto">
                                
                                
                                <!--//MÃ ĐOÀN//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="MÃ ĐOÀN"  Style="{StaticResource tbName}"/>
                                    <TextBox Style="{StaticResource tblIfo1}" IsEnabled="False" Text="{Binding MaDoan}"/>
                                </Grid>

                                <!--//TÊN ĐOÀN//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="TÊN ĐOÀN"  Style="{StaticResource tbName}"/>
                                    
                                    <TextBox Style="{StaticResource tblIfo1}"
                                             IsEnabled="{Binding ElementName=edit, Path=IsChecked}"
                                             Text="{Binding TenDoan}"/>
                                </Grid>

                                <!--//TÊN TOUR//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="TÊN TOUR"  Style="{StaticResource tbName}"/>
                                    <ComboBox
                                                IsEnabled="{Binding ElementName=edit, Path=IsChecked}"
                                                materialDesign:HintAssist.Hint="Search"
                                                Style="{StaticResource CbblIfo1}"
                                                IsEditable="{Binding ElementName=edit, Path=IsChecked}"
                                                materialDesign:HintAssist.HintOpacity=".26">
                                            <ComboBoxItem>
                                                Apple
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                Banana
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                Pear
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                Orange
                                            </ComboBoxItem>
                                    </ComboBox> 
                                </Grid>
                                
                                <!--//NHÂN VIÊN DẪN ĐOÀN//-->
                                <StackPanel Margin="0 5 0 8">
                                    <TextBlock  Text="NHÂN VIÊN : "  Style="{StaticResource tbName}"/>

                                    <Border Margin="10 0 10 0"
                                            CornerRadius="4" Background="#ECF0F1" Padding="0,0,0,4" 
                                            HorizontalAlignment="Stretch">
                                        <ListView SelectedItem="{Binding SelectedItem}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Mã NV" DisplayMemberBinding="{Binding MaNM}"></GridViewColumn>
                                                    <GridViewColumn Header="Tên Nhân Viên" DisplayMemberBinding="{Binding NhanVien.TenNV}"></GridViewColumn>
                                                    <GridViewColumn Header="Chức vụ" DisplayMemberBinding="{Binding ChucVu}"></GridViewColumn>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Border>
                                </StackPanel>

                                <!--//NGÀY ĐI - NGÀY VỀ//-->
                                <Grid Margin="0 5 0 8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker
                                        Margin="10 0 5 0"
                                        IsEnabled="{Binding ElementName=edit, Path=IsChecked}"
                                        SelectedDate="{Binding NgayDi, StringFormat='dd/MM/yyyy'}"
                                                Grid.Column="0"
                                                materialDesign:HintAssist.Hint="Ngày đi"
                                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" IsTodayHighlighted="False" />
                                    <DatePicker
                                        Margin="5 0 10 0"
                                        IsEnabled="{Binding ElementName=edit, Path=IsChecked}"
                                        SelectedDate="{Binding NgayVe, StringFormat='dd/MM/yyyy'}"

                                                Grid.Column="1"
                                                materialDesign:HintAssist.Hint="Ngày về"
                                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </Grid>

                                <!--//DOANH THU//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="DOANH THU"  Style="{StaticResource tbName}"/>
                                    <TextBox Style="{StaticResource tblIfo1}" IsEnabled="False"/>
                                </Grid>

                                <!--//NỘI DUNG//-->
                                <StackPanel Margin="0 5 0 8">
                                    <TextBlock  Text="NỘI DUNG : "  Style="{StaticResource tbName}"/>

                                    <Border Margin="10 0 10 0"
                                            CornerRadius="4" Background="#ECF0F1" Padding="0,0,0,4" 
                                            HorizontalAlignment="Stretch">
                                            <TextBox 
                                                TextWrapping="Wrap"
                                                VerticalAlignment="Top"
                                                IsEnabled="{Binding ElementName=edit, Path=IsChecked}"
                                                AcceptsReturn="True"
                                                Margin="10 5 10 0"
                                                FontSize="14"
                                                materialDesign:HintAssist.Hint="Nội dung đang trống"
                                                />
                                    </Border>
                                </StackPanel>


                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!--//Add - Edit - Remove//-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <!--//Thêm//-->

                        <Button
                                Background="#C4C4C4"
                                Foreground="#000"
                                BorderBrush="#C4C4C4"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                ToolTip="Thêm">

                            <TextBlock Text="Thêm" Style="{StaticResource fontText}"/>
                        </Button>

                        <!--//Sửa//-->
                        <ToggleButton x:Name="edit"
                                BorderBrush="#C4C4C4"
                                Background="#C4C4C4"
                                Foreground="#000"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                Margin="20 0 20 0"
                                IsChecked="False"
                                ToolTip="Sửa">
                            <TextBlock Text="Sửa" Style="{StaticResource fontText}"/>
                            
                        </ToggleButton>

                        <!--//Xóa//-->
                        <Button
                                BorderBrush="#C4C4C4"
                                Background="#C4C4C4"
                                Foreground="#000"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                Command="{Binding DeleteCommand}"
                                ToolTip="Xóa">
                            <TextBlock Text="Xóa" Style="{StaticResource fontText}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>

</UserControl>
