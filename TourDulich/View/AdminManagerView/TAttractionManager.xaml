<UserControl x:Class="TourDulich.View.AdminManager.TAttractionManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourDulich.View.AdminManager" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="625" d:DesignWidth="947">
    <!--//Resource//-->
    <UserControl.Resources>
        <!--//Size - TextBlock//-->
        <Style x:Key="fontText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!--//Size - Combobox//-->
        <Style x:Key="sizeCombobox" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
        </Style>

        <!--//Info - name - value //-->
        <!--//Start//-->
        <Style x:Key="tblIfo" TargetType="TextBlock">
            <Setter Property="Height" Value="auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="190"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="tbName" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="111"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!--//End//-->

    </UserControl.Resources>

    <!--//Main//-->
    <Grid Background="Transparent">
        <materialDesign:Card>
            <Grid>
                <!--//Layout//-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="612"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--//Search//-->
                <Grid Grid.Row="0" Grid.Column="0" Background="#9D9D9D">
                    <TextBlock  Text="Tìm kiếm" 
                                    Margin="55 0 0 0" 
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource fontText}"></TextBlock>
                    <ComboBox
                                    materialDesign:HintAssist.Hint="Search"
                                    IsEditable="True"
                                    VerticalContentAlignment="Center"
                                    Background="#fff"
                                    VerticalAlignment="Center" Margin="125,0,92,0"
                                    materialDesign:HintAssist.HintOpacity=".26"  
                                    Style="{StaticResource sizeCombobox}">
                    </ComboBox>
                    <Grid Background="#918D8D"  Width="30" Height="30"
                              Margin="0 0 62 0"
                              HorizontalAlignment="Right">
                        <Image  Source="/Assets/Icon/DT1__UI--icon/search.png"
                                    Width="30" Height="30"/>
                    </Grid>
                </Grid>

                <!--//Filter//-->
                <Grid Grid.Row="0" Grid.Column="1" Background="#9D9D9D">
                    <TextBlock  Text="Lọc" 
                                    Margin="20 0 0 0" 
                                    Width="40"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource fontText}"/>
                    <ComboBox
                                    Width="260" Background="#fff"
                                    Margin="0 0 16 0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource sizeCombobox}">
                        <ComboBoxItem>
                            Đang di chuyển
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Chưa khởi hành
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Đã kết thúc
                        </ComboBoxItem>
                        <ComboBoxItem>
                            (Default)
                        </ComboBoxItem>
                    </ComboBox>
                </Grid>

                <!--//List Tour//-->
                <Grid Grid.Row="1" Grid.Column="0" >
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel>
                            <!--ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem}"-->
                            <!--<ListView>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Button 
                                                Width="109" Height="125" Margin="5"                       
                                                    Background="#DBF2D0">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="132" Foreground="Black"/>

                                                    <TextBlock Text="Hanh trinh" Foreground="Black"/>
                                                    <TextBlock Text="Thoi gian" Foreground="Black"/>

                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                        
                                    </ListView.ItemTemplate>
                                </ListView>-->
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>


                <!--//Info - Add - Edit - Remove //-->
                <Grid   Grid.Row="1"
                            Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="52"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--//Info//-->
                    <Grid Grid.Row="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" >
                            <StackPanel Background="#C2C2C2" Height="auto">
                                <!--//MÃ ĐỊA ĐIỂM//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="MÃ ĐỊA ĐIỂM"  Style="{StaticResource tbName}"/>
                                    <TextBlock Style="{StaticResource tblIfo}"/>
                                </Grid>

                                <!--//TÊN ĐỊA ĐIỂM//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="TÊN ĐỊA ĐIỂM"  Style="{StaticResource tbName}"/>
                                    <TextBlock Style="{StaticResource tblIfo}"/>
                                </Grid>

                                <!--//MÔ TẢ//-->
                                <Grid Margin="0 5 0 8">
                                    <TextBlock  Text="MÔ TẢ"  Style="{StaticResource tbName}"/>
                                    <TextBlock Style="{StaticResource tblIfo}"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!--//Add - Edit - Remove//-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <!--//Thêm//-->

                        <Button
                                Background="#C4C4C4"
                                Foreground="#000"
                                BorderBrush="#C4C4C4"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                ToolTip="Thêm">

                            <TextBlock Text="Thêm" Style="{StaticResource fontText}"/>
                        </Button>

                        <!--//Sửa//-->
                        <Button
                                BorderBrush="#C4C4C4"
                                Background="#C4C4C4"
                                Foreground="#000"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                Margin="20 0 20 0"
                                Command="{Binding EditCommand}"
                                ToolTip="Sửa">
                            <TextBlock Text="Sửa" Style="{StaticResource fontText}"/>
                        </Button>

                        <!--//Xóa//-->
                        <Button
                                BorderBrush="#C4C4C4"
                                Background="#C4C4C4"
                                Foreground="#000"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="90"
                                Command="{Binding DeleteCommand}"
                                ToolTip="Xóa">
                            <TextBlock Text="Xóa" Style="{StaticResource fontText}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
