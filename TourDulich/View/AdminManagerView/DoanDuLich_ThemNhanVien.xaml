                                ItemsSource="{Binding dsfds}"
                                DisplayMemberPath="ChucVu"
                                SelectedValue="{Binding TenNV1 ,UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource CbblIfo1}"
                        IsEditable="True"
                                materialDesign:HintAssist.HintOpacity=".26">
                    </ComboBox>
                </Grid>
            </StackPanel>-->
        
        </Grid>
    </Grid>

</Window>
