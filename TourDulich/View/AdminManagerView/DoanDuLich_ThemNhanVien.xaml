                                        <DataTrigger Binding="{Binding ElementName=IdNV,Path=SelectedItem}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </Grid>
                --><!--//VAI TRÒ//--><!--
                <Grid Margin="0 16 0 8">
                    <TextBlock  Text="Vai trò: "  Style="{StaticResource tbName}"/>
